<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:id="http://schemas.android.com/tools">
    <data>
        <variable
            name="foodPacket"
            type="com.example.project3.FoodPacket" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="172dp"
                    android:layout_height="192dp"
                    android:layout_margin="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp">


                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="95dp"
                        android:layout_height="23dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/tapered_box1"
                        android:gravity="center_horizontal"
                        android:text="@{foodPacket.discountPercent}"

                        android:textAlignment="center"
                        android:textColor="#A3151212"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="160dp"
                        android:layout_marginStart="9dp"
                        android:layout_marginLeft="9dp"
                        android:layout_marginTop="22dp"
                        android:contentDescription="@string/todo"
                        android:src="@{foodPacket.image}" />

                    <RelativeLayout
                        android:layout_width="35dp"
                        android:layout_height="160dp"
                        android:layout_marginStart="128dp"
                        android:layout_marginLeft="125dp">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="#EE782162"

                            android:gravity="fill_vertical"
                            android:text="@{foodPacket.size}"
                            android:textAllCaps="true"
                            android:textColor="#FFFFFF"
                            android:textIsSelectable="false"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="59dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="15dp"
                            android:background="#9A6516"
                            android:freezesText="true"
                            android:text="@{foodPacket.weight}"
                            android:textAllCaps="true"
                            android:textColor="#EDFFFFFF"
                            android:textSize="15sp"
                            app:autoSizeTextType="uniform" />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="192dp"
                    android:layout_margin="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="70dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginBottom="7dp"
                        android:paddingStart="7dp"
                        android:paddingLeft="7dp"
                        android:text="@{foodPacket.companyName}"
                        android:textColor="#8C8484"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="150dp"
                        android:layout_height="23dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="35dp"
                        android:text="@{foodPacket.productName}"
                        android:textColor="#040303"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="65dp"
                        android:text="@{foodPacket.size}"
                        android:textColor="#131313"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="98dp"
                        android:background="@drawable/tapered_box"
                        android:gravity="center_horizontal"
                        android:text="@{foodPacket.star}"
                        android:textAlignment="center"
                        android:textColor="#E8386A07"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="90dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="55dp"
                        android:layout_marginLeft="55dp"
                        android:layout_marginTop="98dp"
                        android:text="@{foodPacket.ratings}"
                        android:textColor="#7E7B7B"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="170dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="125dp"
                        android:background="#7A595656"
                        android:text="@{foodPacket.desc}"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView

                        android:id="@+id/editTextNumber"
                        android:layout_width="55dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="157dp"
                        android:text="@{foodPacket.retailPrice}"
                        android:textColor="#0B0A0A"
                        android:textColorHint="#020202"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="55dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="70dp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="157dp"
                        android:background="@drawable/strike_shape"
                        android:freezesText="false"
                        android:text="@{foodPacket.markedPrice}"
                        android:textAllCaps="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textColorHighlight="#2C2A2A"
                        android:textColorLink="#FFFFFF"
                        android:textIsSelectable="true"
                        android:textSize="15sp" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="200dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#E4ECCE"
                        android:gravity="center_horizontal"
                        android:spinnerMode="dropdown"
                        android:textAlignment="center" />

                    <Button
                        android:id="@+id/button"
                        android:layout_width="110dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="280dp"
                        android:layout_marginLeft="280dp"
                        android:text="@string/add"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        app:backgroundTint="#AA5656" />

                </RelativeLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>